<main>
    <div class="hero">
        {{#with hero}}
            <h1 class="title_primary">{{title}}</h1>
            <p class="info_text">{{description}}</p>
            {{#with button}}
                <button class="button button_big" href="{{url}}">{{text}}</button>
            {{/with}}
        {{/with}}
    </div>
    <div class="card_text">
        {{#with about}}
            <h2 class="title_secondary">{{heading}}</h2>
            <p class="shop_info">{{info}}</p>
        {{/with}}
    </div>
    <div class="head_art">
        <h3 class="title_art">Our Articles</h3>
        <button class="btn_view">View All</button>
    </div>
    <div class="several_card">
        
        {{> articleCardDark}}
    </div>
</main>






