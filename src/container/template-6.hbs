<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

<div class="info">
    {{#with info}}
        <div class="info_content">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_text">{{description}}</p>
        </div>
    {{/with}}


    {{#with form}}
        <form class="form">
            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="name"
                    id="form-input-{{id}}" />
                {{/each}}
            </div>

            <div class="form_checkbox">
                {{#with checkbox}}
                    <input type="checkbox" id="{{name}}"/>
                    <label for="{{name}}">{{label}}</label>
                {{/with}}
            </div>
            <button type="submit" class="form_button">{{button}}</button>
            <div class="form_line"></div>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</div>

    {{#with updates}}
        <div class="card_updates">
            <h2 class="upd_title">{{title}}</h2>

            {{#each list}}
                <div class="messages">
                    <div>
                        <img src="https://picsum.photos/32/32"/>
                    </div>
                    <div class="msg">
                        <strong class="nick_user">@{{nickname}}</strong>
                        <p class="text_user">{{description}}</p>
                    </div>
                </div>
            {{/each}}
            
            <a class="show_all_link" href="{{show_all.url}}">{{show_all.text}}</a>
        </div>
    {{/with}}

    <div class="expiriense_card">
        {{#with expirience}}
            <span class="exp_badge">{{badge}}</span>
            <div class="exp_title">{{title}}</div>
            <div class="exp_block">
                {{#each list}}
                    <div class="exp_card">
                        <strong class="name_card">{{name}}</strong>
                        <p class="text_card">{{details}}</p>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </div>

<footer class="footer">
    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>


