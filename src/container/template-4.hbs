<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

{{#with main}}
    <div class="main">       
        <img src="{{image}}" alt="Image" class="main_image">
        <div class="main_content">
            <h1 class="main_title">{{heading}}</h1>
            <p class="main_text">{{description}}</p>
            <div class="form_action">
                <a href="{{href}}" class="button main_button">{{button}}</a>
            </div>
        </div>
    </div>
{{/with}}

<main class="featured_block">
    {{#each featured}}
        <div class="card">
            <div class="card_img" style="background-image: url({{photo}});"></div>
            <h2 class="card_title">{{heading}}</h2>
            <p class="card_text">{{info}}</p>
            <a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
        </div>
    {{/each}}
</main>

<div class="form">
    {{#each actions}}
        <div class="form_content">
            <h3 class="form_title">{{heading}}</h3>
            
            <div class="form_action">
                <a href="{{url}}" class="button form_button">{{text}}</a>
                
            </div>
        </div>
    {{/each}}
</div>


<footer class="footer">
    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Â© 2023</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>


